{
  "name": "acr-image-promotion-action",
  "version": "1.0.0",
  "description": "GitHub Action for promoting container images between Azure Container Registry environments",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js -o dist --source-map --license licenses.txt",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib dist coverage",
    "compile": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "package": "npm run clean && npm run compile && npm run build",
    "prepare": "husky install",
    "pre-commit": "npm run format && npm run lint:fix && npm run type-check && npm run test:ci",
    "release": "npm run package && git add dist/ && git commit -m 'Update dist' || echo 'No changes to commit'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigitalInnovation/acr-image-promotion-action.git"
  },
  "keywords": [
    "azure",
    "container-registry",
    "docker",
    "image-promotion",
    "github-actions"
  ],
  "author": "BrightCloud Platform Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@azure/arm-containerregistry": "^10.1.0",
    "@azure/identity": "^4.0.1",
    "@azure/core-auth": "^1.5.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist/",
    "action.yml",
    "README.md",
    "LICENSE"
  ]
}